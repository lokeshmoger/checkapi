{
    "api": {
        "pathBase": "http://api.example.com",
        "debug": "false", // show details on calls to api
        "showScenarioOnError": "true" // show scenario data when happens error on calls
    },
    "auth": {
        "tokenKey": "",
        "tokenSecret": "",
        "consumerKey": "",
        "consumerSecret": ""
    },
    "resources": [
        {
            "name": "Search by address",
            "url": "/search/places/byaddress",
            "auth": "basic",
            "methodHttp": "get",
            "params": [
                {
                    "name": "state",
                    "scenario": [
                        {"value": "são paulo", "statusHttp": "200"},
                        {"value": "rio de janeiro", "statusHttp": "200"},
                        {"value": "desconhecido", "statusHttp": "200"},
                        {"value": "", "statusHttp": "400"}
                    ]
                },            
                {
                    "name": "city",
                    "scenario": [
                            {"value": "são paulo", "statusHttp": "200"},
                            {"value": "rio de janeiro", "statusHttp": "200"},
                            {"value": "desconhecido", "statusHttp": "200"},
                            {"value": "", "statusHttp": "400"}
                    ]
                },            
                {
                    "name": "term",
                    "scenario": [
                            {"value": "loja", "statusHttp": "200"},
                            {"value": "restaurante", "statusHttp": "200"}
                    ]
                }
            ]
        },
        {
            "name": "Send a photo to a place",
            "url": "/places/{placeId}/photos/new",
            "auth": "oauth",
            "methodHttp": "put",
            "params": [
                {
                    "name": "content",
                    "scenario": [
                        { "value": "R0lGODlhEAAOALMA", "statusHttp": "200"},
                        { "value": "aa", "statusHttp": "400"}
                    ] 
                }
            ]
        }
    ],
    "paramsDefault":
    [
        {
            "name": "type",
            "scenario": {
                "positive": [
                    {"value": "json", "statusHttp": "200"},
                    {"value": "xml", "statusHttp": "200"}                            
                ],
                "negative": [
                    {"value": "a","statusHttp": "400"}
                ]
            } 
        },
        {   "name": "placeId",
            "scenario": {
                "positive": [{ "value": "ABC", "statusHttp": "200" }],
                "negative": [
                    { "value": "DEF", "statusHttp": "400" },
                    { "value": "unknown", "statusHttp": "200"}
                ]
            }
        }
    ]
}

